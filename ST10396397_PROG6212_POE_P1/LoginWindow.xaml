<Window x:Class="ST10396397_PROG6212_POE_P1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ST10396397_PROG6212_POE_P1"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock Text="Login Page" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Grid.ColumnSpan="2"/>

        <StackPanel Grid.Row="1" Grid.Column="0" Margin="10">
            <Label>ID:</Label>
            <TextBox Name="IDTextBox" Width="200" Margin="5"/>
            <Label>Full name:</Label>
            <TextBox Name="FullNameTextBox" Width="200" Margin="5"/>
            <Label>Email:</Label>
            <TextBox Name="EmailTextBox" Width="200" Margin="5"/>
            <Button Content="Login" Width="150" Margin="10" Click="Login_Click"/>

        </StackPanel>
    </Grid>
</Window>
